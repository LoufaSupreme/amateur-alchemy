mixin beerForm(beer = {})
    form(action=`/addBeer/${beer._id || ''}` method="POST" class="card" enctype="multipart/form-data")
        label(for="name") Name 
        input(type="text" name="name" value=beer.name)
        label(for="description") Description 
        textarea(name="description") #{beer.description}

        //- image upload
        label(for="photo") Photo 
        input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
        if beer.photo 
            img(src=`/uploads/${beer.photo}`, alt=beer.name width=200)

        //- address, long and lat:
        label(for="Brewery") Brewery
        //- the value checks if there is a beer.location, and if there is it inputs the beer.location.address
        input(type="text" id="address" name="location[address]" value=beer.location && beer.location.address) 

        label(for="lng") Address Longitude
        input(type="text" id="lng" name="location[coordinates][0]" value=beer.location && beer.location.coordinates[0] required)
        label(for="lat") Address Latitude
        input(type="text" id="lat" name="location[coordinates][1]" value=beer.location && beer.location.coordinates[1] required)

        //- a starting dash indicates we're strictly writing javascript 
        - const choices = ['WIFI', 'Open Late', 'Family Friendly', 'Vegetarian', 'Licensed'];
        - const tags = beer.tags || []

        ul.tags 
            each choice in choices 
                .tag.tag__choice 
                    input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
                    label(for=choice) #{choice}
        input(type="submit" value="Save" class="button")