mixin keyForm()
  form(action=`/articles/${article._id}/key` method="POST" class="form-card" autocomplete="off")
    .table
      .form-group.headings
        div Cup Number (Set of 3):
        div Unique Cup Letter:
      .form-group.input-group
        input.num(type="number" name="token" value=1 autocomplete="off" required)
        input.letter(type="text" name="unique_beer" maxlength=1 autocomplete="off" pattern="[abcABC]{1}" required oninvalid="this.setCustomValidity('Letters must be A, B or C')" oninput="this.setCustomValidity('')")
    input(type="button" value="Add Set" class="button" id="add-btn")
    input(type="submit" value="Submit" class="button" id="submit-btn")